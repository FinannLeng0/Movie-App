<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="16dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Top fade overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:elevation="10dp"
                android:background="@drawable/gradient_top_fade" />

            <!-- Bottom fade overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:elevation="10dp"
                android:background="@drawable/gradient_bottom_fade" />

            <!-- Profile icon top-left -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Profile Icon"
                android:src="@drawable/pro"
                android:elevation="30dp" />

            <!-- Logo icon top-right -->
            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="top|start"
                android:layout_marginTop="-28dp"
                android:layout_marginLeft="-8dp"
                android:contentDescription="Logo"
                android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:elevation="30dp" />

        </FrameLayout>




        <!-- Category Title -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAction"
                    style="@style/CategoryButton"
                    android:text="Action"
                    android:checkable="true"
                    android:layout_width="120dp"
                    android:layout_height="50dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnComedy"
                    style="@style/CategoryButton"
                    android:text="Comedy"
                    android:checkable="true"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDrama"
                    style="@style/CategoryButton"
                    android:text="Drama"
                    android:checkable="true"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRomance"
                    style="@style/CategoryButton"
                    android:text="Romance"
                    android:checkable="true"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHorror"
                    style="@style/CategoryButton"
                    android:text="Horror"
                    android:checkable="true"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Most Popular -->
        <TextView
            android:text="Most Popular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="24dp" />

        <!-- Khmer Movies -->
        <TextView
            android:text="Khmer Movies"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/khmerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="24dp" />

        <!-- Anime -->
        <TextView
            android:text="Anime"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/animeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
