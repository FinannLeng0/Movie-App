<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Main content ScrollView -->
    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/dashboardContainer"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- MaterialCardView header & profile -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/dark_gray"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.BottomRounded">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/backButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_back_arrow"
                        android:scaleType="centerInside"
                        android:contentDescription="Back"
                        app:tint="@android:color/white" />

                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_edit"
                        android:scaleType="centerInside"
                        android:contentDescription="Edit"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/backButton"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWelcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome!"
                                android:textColor="@android:color/white"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCCCCC"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Profile Icon -->
                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile_placeholder"
                            android:background="@drawable/bg_circle" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tab layout: Contact Us / Dashboard -->
            <LinearLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:background="@android:color/transparent">

                <!-- Text options row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvContactUs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Contact Us"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tvDashboard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Dashboard"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Base gray line -->
                <View
                    android:id="@+id/baseLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#444444" />

                <!-- Red indicator line -->
                <View
                    android:id="@+id/indicator"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="-2dp"
                    android:background="@android:color/holo_red_dark" />
            </LinearLayout>

            <!-- Contact details container -->
            <LinearLayout
                android:id="@+id/contactContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone">

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="011 168 111"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Facebook -->
                <LinearLayout
                    android:id="@+id/facebookRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:onClick="onFacebookClick">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_facebook"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook Page"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Telegram -->
                <LinearLayout
                    android:id="@+id/rowTelegram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:onClick="onTelegramClick">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_telegram"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Telegram"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- TikTok -->
                <LinearLayout
                    android:id="@+id/rowTikTok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:onClick="onTikTokClick">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tiktok"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our TikTok"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phnom Penh, Cambodia"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@android:color/white"
                    android:background="@android:color/black">

                    <android.webkit.WebView
                        android:id="@+id/mapWebView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Dashboard container OUTSIDE ScrollView -->
    <LinearLayout
        android:id="@+id/dashboardContainer"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginBottom="-30dp"
        android:layout_above="@id/btnSignOut"
        android:visibility="visible">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUserVideos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"
            android:paddingBottom="16dp" />

    </LinearLayout>


    <!-- Fixed Sign Out button at bottom -->
    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"
        android:drawablePadding="8dp"
        app:iconTint="@android:color/white"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
