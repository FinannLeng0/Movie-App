<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="100dp">

        <!-- Header -->
        <TextView
            android:text="Post New Video"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#1E1E1E"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/red"
            app:boxStrokeWidthFocused="2dp"
            android:layout_marginBottom="12dp">




        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTitle"
                android:hint="Video Title"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#1E1E1E"
            android:layout_marginBottom="20dp"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/red"
            app:boxStrokeWidthFocused="2dp"
            >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDescription"
                android:hint="Description"
                android:minLines="4"
                android:maxLines="6"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Thumbnail Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@color/dark_gray"
                    android:scaleType="fitXY"
                    android:contentDescription="Thumbnail preview" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textUploadThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Thumbnail"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="140dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Thumbnail Info -->
        <TextView
            android:id="@+id/textThumbnailInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="start" />

        <!-- Video Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp"
            android:gravity="center_vertical">

            <!-- Video Container Full Width -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                >

                <FrameLayout
                    android:id="@+id/videoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <!-- Video Preview -->
                    <VideoView
                        android:id="@+id/videoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333333"
                        android:adjustViewBounds="true" />

                    <!-- Play Button -->
                    <ImageView
                        android:id="@+id/buttonPlayVideo"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        app:tint="#FFFFFF" />

                    <!-- Upload Video Text OVER the video -->
                    <TextView
                        android:id="@+id/textUploadVideo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Upload Video"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#66000000"
                        android:clickable="true"
                        android:focusable="true" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Upload Button -->
        <Button
            android:id="@+id/buttonUpload"
            android:text="Post Now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="14dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp" />

        <!-- Upload Status -->
        <TextView
            android:id="@+id/textUploadStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BB86FC"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
