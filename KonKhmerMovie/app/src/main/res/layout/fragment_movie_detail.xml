<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Video Player Frame -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <androidx.media3.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"
                app:show_buffering="when_playing"
                app:use_controller="true"
                app:resize_mode="fit" />

            <ImageView
                android:id="@+id/thumbnailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle"
                android:background="@android:color/transparent"
                android:contentDescription="Play"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/fullscreenOverlayButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_fullscreen"
                android:background="@null"
                android:layout_marginRight="-5dp"
                android:layout_marginBottom="4dp"
                android:contentDescription="Fullscreen"
                android:elevation="8dp"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back"
                android:elevation="10dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="@android:color/white" />

        </FrameLayout>

        <!-- Movie Title -->
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Movie Description -->
        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie description goes here..."
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Favorite & Download Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <!-- Favorite Button Layout -->
            <LinearLayout
                android:id="@+id/favoriteLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/item_rounded_bg"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_favorite_border"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Download Button Layout -->
            <LinearLayout
                android:id="@+id/downloadLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/item_rounded_bg"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/downloadIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_download"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:paddingTop="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- More Movies Label -->
        <TextView
            android:id="@+id/moreMoviesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Movies"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <!-- More Movies RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moreMoviesRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
